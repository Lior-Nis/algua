# === API KEYS ================================================================
# Alpaca Trading (Free Tier)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # paper trading URL

# TradingView Data Feed
TRADINGVIEW_USERNAME=your_tradingview_username
TRADINGVIEW_PASSWORD=your_tradingview_password

# Weights & Biases
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=algua-trading
WANDB_ENTITY=your_wandb_entity

# Telegram Bot (for alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# === TRADING CONFIG ==========================================================
# Risk Management
MAX_POSITION_SIZE=0.02  # Max 2% of portfolio per position
MAX_PORTFOLIO_RISK=0.1  # Max 10% portfolio drawdown
STOP_LOSS_PERCENT=0.05  # 5% stop loss

# Market Hours (UTC)
MARKET_OPEN_HOUR=14  # 9:30 AM EST
MARKET_CLOSE_HOUR=21  # 4:00 PM EST

# Trading Settings
TRADING_ENABLED=false  # Set to true for live trading
PAPER_TRADING=true
MIN_TRADE_AMOUNT=100  # Minimum trade size in USD

# === DATABASE & STORAGE ======================================================
# Local Data Paths
DATA_DIR=./data
LOGS_DIR=./logs
MODELS_DIR=./models/saved

# Cloud Storage (optional)
GCS_BUCKET=your-gcs-bucket-name
AWS_BUCKET=your-aws-bucket-name
RCLONE_CONFIG_PATH=~/.rclone.conf

# === API SETTINGS ============================================================
# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Streamlit
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501

# === LOGGING & MONITORING ====================================================
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
ENABLE_TELEGRAM_ALERTS=false
ENABLE_WANDB_LOGGING=true

# === DEVELOPMENT =============================================================
DEBUG=false
TESTING=false
VECTORBT_PRO_LICENSE_KEY=your_vectorbt_pro_license

# === DATA SOURCES ============================================================
# FirstRate Data / Databento local files
FIRSTRATE_DATA_PATH=./data/firstrate
DATABENTO_DATA_PATH=./data/databento

# Market Data Settings
DEFAULT_TIMEFRAME=1h
LOOKBACK_DAYS=252  # 1 year of trading days
DATA_REFRESH_INTERVAL=300  # seconds 